@using Models.Departure;


@code {
    [Parameter]
    public Departures departures { get; set; }


}

<h5>Pendeltåg</h5>

@if (departures.ResponseData != null && departures.ResponseData.Trains.Count() != 0)
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Linje</th>
                <th scope="col">Tid</th>
                <th scope="col">Destination</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var train in departures.ResponseData.Trains)
            {
                <tr class="border-bottom">
                    <th scope="row">@train.LineNumber</th>
                    <td>@train.DisplayTime</td>
                    <td>@train.Destination</td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <p>Hittade inga avgångar</p>
}
